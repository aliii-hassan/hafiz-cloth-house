{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        },
        {
            "src": "./public/**/*", 
            "use": "@vercel/static-build", 
            "config":
            {
                "output": "public"
            }
        } 
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}
